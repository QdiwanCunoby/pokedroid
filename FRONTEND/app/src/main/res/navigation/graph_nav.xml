<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph_nav"
    app:startDestination="@id/registrationFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="it.cudia.studio.android.pokedroid.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_loginFragment_to_listaPokemonFragment"
            app:destination="@id/listaPokemonFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="it.cudia.studio.android.pokedroid.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registrationFragment_to_listaPokemonFragment"
            app:destination="@id/listaPokemonFragment" />
    </fragment>
    <fragment
        android:id="@+id/listaPokemonFragment"
        android:name="it.cudia.studio.android.pokedroid.ListaPokemonFragment"
        android:label="fragment_lista_pokemon"
        tools:layout="@layout/fragment_lista_pokemon" />
</navigation>